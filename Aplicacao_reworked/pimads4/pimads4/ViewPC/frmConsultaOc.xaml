<UserControl x:Class="pimads4.ViewPC.frmConsultaOc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pimads4.ViewPC"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="1045">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="76*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="122*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="339*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblDt_Inicial" Grid.Row="0" Content="Data Inicio"  VerticalAlignment="Bottom" Height="24"  Grid.Column="5" />
        <DatePicker x:Name="dtpDt_Inicial" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="25" Grid.Column="6" Grid.Row="0" Width="100" Grid.ColumnSpan="2"/>

        <Label x:Name="lblDt_Final" Content="Data Final"  VerticalAlignment="Bottom" Height="24"  Grid.Column="12"/>
        <DatePicker x:Name="dtpDt_Final" Grid.Row="0" VerticalAlignment="Bottom" Height="25" Grid.Column="13" Width="100" HorizontalAlignment="Left"/>

        <Label x:Name="lblPesq_Fornecedor" Content="Fornecedor:"  VerticalAlignment="Bottom" Grid.Row="1" Height="24"  Grid.Column="2" Grid.ColumnSpan="3" Margin="98,0,0,0" />
        <ComboBox x:Name="cmbNm_Fornecedor" VerticalAlignment="Bottom" Grid.Row="1" Height="25" Grid.Column="4" Grid.ColumnSpan="11" />

        <Label x:Name="lblDt_Emissao" Content="Data Emissão" Height="24" Grid.Row="3" Grid.Column="5" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtDt_Emissao" HorizontalAlignment="Left" Height="25"  TextWrapping="Wrap" VerticalAlignment="Bottom" Width="100" Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2" IsReadOnly="True"/>

        <Label x:Name="lblNr_OrdemCompra" Content="Ordem de Compra" VerticalAlignment="Bottom" Grid.Row="3" Height="24" Grid.Column="11" Grid.ColumnSpan="2"  HorizontalContentAlignment="Center"/>

        <TextBox x:Name="txtNr_OrdemCompra" Height="22" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Row="3" Grid.Column="13" Width="100" IsReadOnly="True"  HorizontalContentAlignment="Center"/>

        <Label x:Name="lblDs_Fornecedor" Content="Fornecedor:" VerticalAlignment="Bottom" Grid.Row="4" Height="24" Grid.Column="2" Grid.ColumnSpan="2" Margin="103,0,0,0" HorizontalContentAlignment="Center"  />

        <TextBox x:Name="txtDs_Fornecedor" Height="24" TextWrapping="Wrap" VerticalAlignment="Bottom" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="11" IsReadOnly="True" HorizontalContentAlignment="Center" />

        <Rectangle Fill="#FFF4F4F5" Height="1"  Stroke="Silver" VerticalAlignment="Bottom"  Grid.Row="2" Grid.ColumnSpan="18">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Label x:Name="lblDtg_OrdemCompra" Content="ORDENS DE COMPRA EMITIDAS" Grid.Column="2" HorizontalAlignment="Stretch" Grid.Row="6" VerticalAlignment="Stretch" Grid.ColumnSpan="6" Width="490" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="ExtraBold" />

        <DataGrid x:Name="dtgOrdemCompra" Grid.Column="2" Grid.Row="7"  Grid.ColumnSpan="6"  Grid.RowSpan="1" AutoGenerateColumns="False" MouseLeftButtonUp="DtgOrdemCompra_MouseLeftButtonUp" ColumnWidth="*" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding IdOrdemCompra}" Header="Nº ODC" Width="auto"/>
                <DataGridTextColumn Binding="{Binding Pessoa.NmPessoa}" Header="FORNECEDOR" Width="auto"/>
                <DataGridTextColumn Binding="{Binding DtDigitacao}" Header="DATA DA EMISSÃO" />
                <DataGridTextColumn Binding="{Binding ValorTotal, ConverterCulture=pt-BR, StringFormat=C}" Header="VL. TOTAL"/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid x:Name="dtgProdutoOc" ColumnWidth="*" Grid.Row="7" Grid.Column="11" Grid.ColumnSpan="5" Grid.RowSpan="1"  AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding IdOcProduto}" Header="ID" Visibility="Hidden"/>
                <DataGridTextColumn Binding="{Binding Produto.IdProduto}" Header="COD. PRODUTO" Width="auto"/>
                <DataGridTextColumn Binding="{Binding Produto.DsProduto}" Header="PRODUTO" Width="auto" />
                <DataGridTextColumn Binding="{Binding Quantidade}" Header="QTD"/>
                <DataGridTextColumn Binding="{Binding VlrUnit, ConverterCulture=pt-BR, StringFormat=C}" Header="VALOR UNIT" />
                <DataGridTemplateColumn>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnOc_Consultar" Content="Pesquisar" Grid.Column="15" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="103" Grid.ColumnSpan="2" Click="BtnOc_Consultar_Click"/>
        <Button x:Name="btnLimpar" Content="Limpar" Grid.Column="15" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="103" Grid.ColumnSpan="2" Grid.Row="1" Click="BtnLimpar_Click"/>
        <Label x:Name="lblDtg_OrdemCompra_Copy" Content="ITENS DA ORDEM DE COMPRA" Grid.Column="11" HorizontalAlignment="Stretch" Grid.Row="6" VerticalAlignment="Stretch" Grid.ColumnSpan="6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" />


    </Grid>
</UserControl>
