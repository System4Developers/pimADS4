<Page x:Class="pimads4.ViewPC.ViewPCConsultar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pimads4.ViewPC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewPCConsultar">

    <Grid>
        <Label Grid.Row="0" Content="Data Inicio" HorizontalAlignment="Center"  VerticalAlignment="Bottom" Height="24" Width="66" Margin="179,0,555,401"/>
        <DatePicker HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="25" Grid.Row="0" Width="100" Margin="252,0,0,401"/>
        <Label Content="Data Final" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Height="24" Width="66" Margin="396,0,0,401"/>
        <DatePicker Grid.Row="0" VerticalAlignment="Bottom" Height="25" Width="100" HorizontalAlignment="Left" Margin="475,0,0,401"/>
        <Label Content="Cliente"  VerticalAlignment="Bottom" Height="24"  Margin="121,0,627,345" />
        <ComboBox HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="453" Height="25" Margin="173,0,0,345" />
        <Label Content="Data Emissão" HorizontalAlignment="Left" Margin="180,150,0,0" VerticalAlignment="Top" Height="26" Width="81"/>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="260,150,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="111"/>
        <Label Content="Pedido" HorizontalAlignment="Left" Margin="397,148,0,0" VerticalAlignment="Top" Height="26" Width="47"/>
        <TextBox HorizontalAlignment="Left" Height="22" Margin="434,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134"/>
        <Label Content="Cliente" HorizontalAlignment="Left" Margin="136,184,0,0" VerticalAlignment="Top" Height="26" Width="48"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="4" Margin="8,118,-8,0" Stroke="Black" VerticalAlignment="Top" Width="800" RenderTransformOrigin="0.5,0.5">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <DataGrid HorizontalAlignment="Left" Height="202" Margin="18,228,0,0" VerticalAlignment="Top" Width="353">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding IdUsuario}" Header="ID" Visibility="Hidden"/>
                <DataGridTextColumn Binding="{Binding NmUsuario}" Header="DATA" />
                <DataGridTextColumn Binding="{Binding DsLogin}" Header="PEDIDO" />
                <DataGridTextColumn Binding="{Binding TpUsuario}" Header="CLIENTE"/>
                <DataGridTemplateColumn/>
            </DataGrid.Columns>
        </DataGrid>

        <DataGrid HorizontalAlignment="Left" Height="202" Margin="402,228,0,0" VerticalAlignment="Top" Width="356">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding IdUsuario}" Header="ID" Visibility="Hidden"/>
                <DataGridTextColumn Binding="{Binding NmUsuario}" Header="DESCRIÇÃO" />
                <DataGridTextColumn Binding="{Binding DsLogin}" Header="UNID" />
                <DataGridTextColumn Binding="{Binding TpUsuario}" Header="QTDADE"/>
                <DataGridTextColumn Binding="{Binding TpUsuario}" Header="VALOR UNIT"/>
                <DataGridTemplateColumn/>
            </DataGrid.Columns>
        </DataGrid>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="201,186,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="453"/>

    </Grid>
</Page>
