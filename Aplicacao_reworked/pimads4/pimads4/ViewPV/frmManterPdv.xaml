<UserControl x:Class="pimads4.frmManterPdv"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pimads4"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="1045">
    <Grid>
        <Grid.RowDefinitions>

            <RowDefinition Height="54*"/>
            <RowDefinition Height="52*"/>
            <RowDefinition Height="56*"/>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="38*"/>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="58*"/>
            <RowDefinition Height="57*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="49*"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>


            <ColumnDefinition Width="26"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="12*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="41*"/>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="111*"/>
            <ColumnDefinition Width="143*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="189*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="102*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="37*"/>

        </Grid.ColumnDefinitions>

        <Label x:Name="lblDt_Digitacao" Content="Data" Grid.Column="5" HorizontalAlignment="Left" Grid.Row="0"  VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <DatePicker x:Name="dtpDt_Digitacao" Grid.Column="5" VerticalAlignment="Bottom" Grid.ColumnSpan="5"/>
        
        <Label x:Name="lblNm_Cliente" Content="Cliente" Grid.Row="0" Grid.Column="12" VerticalAlignment="Top" HorizontalContentAlignment="Left" Height="26" Grid.ColumnSpan="3"/>
        <ComboBox x:Name="cmbNm_Cliente"  Grid.Column="12" VerticalAlignment="Bottom" Grid.ColumnSpan="4"  Grid.Row="0" Height="28"/>
        
        <Label x:Name="lblDs_Produto"  Content="Produto" Grid.Column="5" VerticalAlignment="Bottom" Height="26" Grid.Row="1" Grid.ColumnSpan="2"/>
        <ComboBox x:Name="cmbDs_Produto" VerticalAlignment="Top" Grid.Column="5" Grid.Row="2" Grid.ColumnSpan="6"  Height="28" SelectionChanged="CmbDs_Produto_SelectionChanged" />
        
        <Label x:Name="lblNr_Quantidade" Content="Quantidade"  Grid.Column="13" Grid.Row="1" VerticalAlignment="Bottom" />
        <TextBox x:Name="txtNr_Quantidade" Height="22" TextWrapping="Wrap"  VerticalAlignment="top" Grid.Column="13" Grid.Row="2" Margin="0,3,18,2"/>
        
        <Label x:Name="lblVl_Desconto" Content="Valor Desconto" Grid.Column="15"  Grid.Row="1" VerticalAlignment="Bottom" Height="26"/>
        <ComboBox SelectedValuePath="Tag" x:Name="cmbVl_Desconto" Grid.Column="15" HorizontalAlignment="Left" Height="24"  Grid.Row="2" VerticalAlignment="top" Width="82" Margin="0,2" FontSize="12" HorizontalContentAlignment="Center" >
            <ComboBoxItem IsSelected="True" Tag="0" Content="" />
            <ComboBoxItem Tag="5" Content="5 %"/>
            <ComboBoxItem Tag="10" Content="10 %"/>
            <ComboBoxItem Tag="15" Content="15 %"/>
            <ComboBoxItem Tag="20" Content="20 %"/>
            <ComboBoxItem Tag="25" Content="25 %"/>
        </ComboBox>

        <Label x:Name="lblTp_Pagamento" Content="Forma de Pagamento" Grid.Column="17"  Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Bottom" Height="26"/>
        <ComboBox SelectedValuePath="Tag" x:Name="cmbTp_Pagamento" Grid.Column="17" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="24"  Grid.Row="2" VerticalAlignment="top" Width="110" Margin="0,2" FontSize="12" HorizontalContentAlignment="Center" >
            <ComboBoxItem IsSelected="True" Tag="0" Content="" />
            <ComboBoxItem Tag="CARTAO" Content="CARTAO"/>
            <ComboBoxItem Tag="DINHEIRO" Content="DINHEIRO"/>
            <ComboBoxItem Tag="DIGITAL" Content="DIGITAL"/>
            <ComboBoxItem Tag="BOLETO" Content="BOLETO"/>
        </ComboBox>


        <Label x:Name="lblVl_Unitario" Content="Valor unitario" Grid.Column="12" Grid.Row="1" VerticalAlignment="Bottom" Height="26" />
        <TextBox x:Name="txtVl_Unitario" Grid.Column="12" HorizontalAlignment="Left" Height="22"  Grid.Row="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="82" Margin="0,2" Grid.ColumnSpan="2" IsReadOnly="True" />

        <Button x:Name="btnAdicionar" Content="Adicionar" Grid.Column="20" Width="100" Grid.Row="1"  Height="45" Grid.RowSpan="2" Margin="0,20" Click="BtnAdicionar_Click" />

        <Grid Background="#FFE2E2E2" Grid.ColumnSpan="16" Grid.Column="1" Grid.Row="3" Grid.RowSpan="12" />
        
        <Grid Background="White" Grid.Column="15" Grid.Row="11" Grid.RowSpan="2"/>
        <TextBox x:Name="txtVl_Total" Grid.Column="15" IsReadOnly="True" Grid.Row="11" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="25" BorderBrush="#89FBF8F8" Foreground="#FF7E7C7C" HorizontalContentAlignment="Center"/>
        
        <Grid  Background="White" Grid.Column="13" Grid.Row="11" Grid.RowSpan="2" />
        <TextBox x:Name="txtVl_TotalDesconto" IsReadOnly="True" Grid.Column="13" Grid.Row="11" Grid.RowSpan="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" FontSize="25" BorderBrush="#89FBF8F8" Foreground="#FF7E7C7C" HorizontalContentAlignment="Center"/>

        <Label Content="Quantidade" Grid.Column="2" FontWeight="Bold" VerticalAlignment="Top" HorizontalContentAlignment="Center" Grid.ColumnSpan="4"  Grid.Row="11" Grid.RowSpan="2" Height="26" />
        <Button x:Name="btnQtdAdd" Content="+" Height="24" Grid.Column="2" Grid.Row="12" VerticalAlignment="Bottom" Grid.ColumnSpan="1" Grid.RowSpan="2" Click="BtnQtdAdd_Click"  />
        <Button x:Name="btnQtdRmv" Content="-"  Height="24" Grid.Column="4" Grid.Row="12" Grid.RowSpan="2" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Click="BtnQtdRmv_Click"  />

        <Button x:Name="btnExluir" Content="Excluir" HorizontalAlignment="Left"  VerticalAlignment="Bottom" Width="108" Height="24" Grid.Column="9" Grid.Row="12" Grid.ColumnSpan="3" Grid.RowSpan="2" Click="BtnExluir_Click"  />

        <Button x:Name="btnFinalizarVenda" Content="Finalizar Venda" Grid.Column="15" Grid.Row="14" Height="Auto" Margin="0,11,0,10" Click="BtnFinalizarVenda_Click"  />
        
        <Label Content="Total Desconto" Grid.Column="13" HorizontalAlignment="Center"  Grid.Row="13" VerticalAlignment="Top" Width="89" FontWeight="Bold" FontSize="11" Height="26" Grid.RowSpan="2" />

        <DataGrid x:Name="dtgPedidoVendaProduto" Grid.Column="2" Grid.ColumnSpan="14" Grid.Row="3" Grid.RowSpan="8" Margin="0,32,0,10" AutoGenerateColumns="False" ColumnWidth="*">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Produto.IdProduto}" Header="COD. PRODUTO"/>
                <DataGridTextColumn Binding="{Binding Produto.DsProduto}" Header="PRODUTO" />
                <DataGridTextColumn Binding="{Binding Quantidade}" Header="QUANTIDADE"/>
                <DataGridTextColumn Binding="{Binding VlrUnit, ConverterCulture=pt-BR, StringFormat=C}" Header="VL. UNIT"/>
                <DataGridTextColumn Binding="{Binding Desconto, ConverterCulture=pt-BR, StringFormat=C}" Header="VL. DESCONTO"/>
                <DataGridTextColumn Binding="{Binding VlrSubTotal, ConverterCulture=pt-BR, StringFormat=C}" Header="SUBTOTAL"/>
            </DataGrid.Columns>
        </DataGrid>
        

    </Grid>
</UserControl>
