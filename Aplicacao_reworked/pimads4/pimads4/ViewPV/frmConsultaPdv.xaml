<UserControl x:Class="pimads4.ViewPV.frmConsultaPdv"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pimads4.ViewPV"
             mc:Ignorable="d" 
             d:DesignHeight="620" d:DesignWidth="1045">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="121*"/>
            <ColumnDefinition Width="58*"/>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="87*"/>
            <ColumnDefinition Width="76*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="7*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="69*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="80*"/>
            <ColumnDefinition Width="122*"/>
            <ColumnDefinition Width="14*"/>
            <ColumnDefinition Width="12*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="37*"/>
            <RowDefinition Height="39*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="339*"/>
            <RowDefinition Height="29*"/>
        </Grid.RowDefinitions>

        <Label x:Name="lblDt_Inicio" Grid.Row="0" Content="Data Inicio"  VerticalAlignment="Bottom" Height="24"  Grid.Column="5" />
        <DatePicker x:Name="dtpDt_Inicial" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="25" Grid.Column="6" Grid.Row="0" Width="100" Grid.ColumnSpan="2"/>

        <Label x:Name="lblDt_Final" Content="Data Final"  VerticalAlignment="Bottom" Height="24"  Grid.Column="12"/>
        <DatePicker x:Name="dtpDt_Final" Grid.Row="0" VerticalAlignment="Bottom" Height="25" Grid.Column="13" Width="100" HorizontalAlignment="Left"/>

        <Label x:Name="lblNm_Cliente" Content="Cliente"  VerticalAlignment="Bottom" Grid.Row="1" Height="24"  Grid.Column="3" Grid.ColumnSpan="2" />
        <ComboBox x:Name="cmbNm_Cliente" VerticalAlignment="Bottom" Grid.Row="1" Height="25" Grid.Column="4" Grid.ColumnSpan="11"/>

        <Button x:Name="btnPesquisar" Grid.ColumnSpan="2" Content="Pesquisar" Grid.Column="15" HorizontalAlignment="Right"  VerticalAlignment="Bottom" Width="103" Click="BtnPesquisar_Click"/>

        <Button x:Name="btnLimpar" Grid.ColumnSpan="2" Content="Limpar" Grid.Column="15" HorizontalAlignment="Right"  Grid.Row="1" VerticalAlignment="Bottom" Width="103" Click="BtnLimpar_Click"/>

        <Label x:Name="lblDt_Emissao" Content="Data Emissão" Height="24" Grid.Row="3" Grid.Column="5" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtDt_Emissao" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Height="25"  TextWrapping="Wrap" VerticalAlignment="Bottom" Width="163" Grid.Row="3" Grid.Column="6" Grid.ColumnSpan="2" IsReadOnly="True"/>

        <Label x:Name="lblNr_PedidoVenda" Content="Pedido" VerticalAlignment="Bottom" Grid.Row="3" Height="24" Grid.Column="12" />
        <TextBox x:Name="txtNr_PedidoVenda" Height="22" TextWrapping="Wrap" VerticalAlignment="Bottom" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Grid.Row="3" Grid.Column="13" Width="133" IsReadOnly="True" />

        <Label x:Name="lbl_Cliente" Content="Cliente" VerticalAlignment="Bottom" Grid.Row="4" Height="24" Grid.Column="3"  />
        <TextBox x:Name="txt_Cliente" Height="24" TextWrapping="Wrap" VerticalAlignment="Bottom" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="11" IsReadOnly="True" HorizontalContentAlignment="Center" TextChanged="Txt_Cliente_TextChanged"  />

        <Rectangle Fill="#FFF4F4F5" Height="1"  Stroke="Silver" VerticalAlignment="Bottom"  Grid.Row="2" Grid.ColumnSpan="18">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>

        <Label x:Name="lblDtg_OrdemCompra" Content="PEDIDOS DE VENDA EMITIDOS" Grid.Column="2" HorizontalAlignment="Stretch" Grid.Row="6" VerticalAlignment="Stretch" Grid.ColumnSpan="6" Width="490" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="ExtraBold" Margin="2,0" />

        <DataGrid x:Name="dtgPedidoVenda" Grid.Column="2" Grid.Row="7"  Grid.ColumnSpan="6"  Grid.RowSpan="1" AutoGenerateColumns="False" MouseLeftButtonUp="DtgPedidoVenda_MouseLeftButtonUp" ColumnWidth="*" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding IdPedido}" Header="Nº PV" Width="AUTO" />
                <DataGridTextColumn Binding="{Binding Pessoa.NmPessoa}" Header="CLIENTE" Width="auto"/>
                <DataGridTextColumn Binding="{Binding DtDigitacao}" Header="DATA"/>
                <DataGridTextColumn Binding="{Binding ValorTotal, ConverterCulture=pt-BR, StringFormat=C}" Header="VLR. TOTAL" />
            </DataGrid.Columns>
        </DataGrid>


        <Label x:Name="lblDtg_OrdemCompra_Copy" Content="ITENS DO PEDIDO DE VENDA" Grid.Column="11" HorizontalAlignment="Stretch" Grid.Row="6" VerticalAlignment="Stretch" Grid.ColumnSpan="6" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="ExtraBold" />

        <DataGrid x:Name="dtgPedidoVendaProduto" Grid.Row="7" Grid.Column="11" Grid.ColumnSpan="5" Grid.RowSpan="1"  AutoGenerateColumns="False" ColumnWidth="*" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding IdPedItem}" Header="ID" Width="auto"/>
                <DataGridTextColumn Binding="{Binding Produto.IdProduto}" Header="COD. PRODUTO" />
                <DataGridTextColumn Binding="{Binding Produto.DsProduto}" Header="DESCRIÇÃO" Width="auto" />
                <DataGridTextColumn Binding="{Binding Quantidade}" Header="QTD"/>
                <DataGridTextColumn Binding="{Binding VlrUnit, ConverterCulture=pt-BR, StringFormat=C}" Header="VALOR UNIT"  />

            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="btnLimpar2" Grid.ColumnSpan="2" Content="Limpar" Grid.Column="15" HorizontalAlignment="Right"  Grid.Row="4" VerticalAlignment="Bottom" Width="103" Click="BtnLimpar2_Click"/>

    </Grid>
</UserControl>
