<UserControl x:Class="pimads4.frmPedido.frmCadastrarPedido"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="670.5" Width="998">
    <Grid Margin="0,0,10,10">
        <Button x:Name="btnFinalizarPedido" Content="FINALIZAR PEDIDO" HorizontalAlignment="Left" Margin="66,502,0,0" VerticalAlignment="Top" Width="106" Height="24"/>
        <DataGrid HorizontalAlignment="Left" Height="296" Margin="66,158,0,0" VerticalAlignment="Top" Width="598"/>
        <Label x:Name="lblCod" Content="CÓDIGO" HorizontalAlignment="Left" Margin="66,80,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.516,0.485"/>
        <Label x:Name="lblDes" Content="DESCRIÇÃO" HorizontalAlignment="Left" Margin="190,80,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblQtd" Content="QTDE." HorizontalAlignment="Left" Margin="406,76,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.132,0.444"/>
        <TextBox x:Name="txbCod" HorizontalAlignment="Left" Height="24" Margin="66,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="-0.15,0.1"/>
        <TextBox x:Name="txbDs" HorizontalAlignment="Left" Height="24" Margin="194,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204"/>
        <TextBox x:Name="txbQtde" HorizontalAlignment="Left" Height="24" Margin="406,106,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="58"/>
        <Button x:Name="btnAddProduto" Content="+" HorizontalAlignment="Left" Margin="489,99,0,0" VerticalAlignment="Top" Width="49" Height="31" Click="BtnAddProduto_Click"/>
        <Button x:Name="btnQtdeMais" Content="+ QTDE" HorizontalAlignment="Left" Margin="690,164,0,0" VerticalAlignment="Top" Width="96"/>
        <Button x:Name="btnQtdeMenos" Content="- QTDE" HorizontalAlignment="Left" Margin="690,198,0,0" VerticalAlignment="Top" Width="96"/>
        <Button x:Name="btnRemover" Content="REMOVER ITEM" HorizontalAlignment="Left" Margin="690,234,0,0" VerticalAlignment="Top" Width="96"/>
        <TextBox x:Name="txbValorTotal" HorizontalAlignment="Left" Height="22" Margin="544,504,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblValorTotal" Content="VALOR TOTAL" HorizontalAlignment="Left" Margin="544,478,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.158,-0.346"/>
        <Button x:Name="btnClosePedido" Content="ENCERRAR" Margin="842,618,10,0" VerticalAlignment="Top" Click="BtnClosePedido_Click"/>

    </Grid>
</UserControl>
