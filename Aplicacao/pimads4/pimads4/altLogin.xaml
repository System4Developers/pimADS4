<Page x:Class="pimads4.altLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pimads4"
      mc:Ignorable="d"
      Title="altLogin" Width="235" Height="225">

    <Grid Margin="0,0,14.6,-0.4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="171*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtUsuario" HorizontalAlignment="Left" Height="23" Margin="47,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtSenha" HorizontalAlignment="Left" Height="23" Margin="45,112,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnLogar" Content="Login" HorizontalAlignment="Left" Margin="90,161,0,0" VerticalAlignment="Top" Width="75"/>
        <Label x:Name="lblUsuario" Content="Usuário:" HorizontalAlignment="Left" Margin="48,30,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>
        <Label x:Name="lblSenha" Content="Senha:" HorizontalAlignment="Left" Margin="47,84,0,0" VerticalAlignment="Top" Padding="0,5,5,5"/>

    </Grid>
</Page>
